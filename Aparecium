    border-radius: 10px;
}

button {
    background-color: #add8e6; /* Light blue button background */
    color: #fff; /* White text color */
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
}

button:hover {
    background-color: #87ceeb; /* Light blue button background on hover */
}

/* Popup styles */
.popup {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5); /* Semi-transparent black background */
    z-index: 9999; /* Ensure popup is on top */
}

.popup-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff; /* White background */
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0,0,0,0.3); /* Shadow effect */
}

/* Animation for Nah button */
@keyframes moveButton {
    0% { top: 0; left: 0; }
    25% { top: 50px; left: 50px; }
    50% { top: 0; left: 100px; }
    75% { top: -50px; left: 50px; }
    100% { top: 0; left: 0; }
}

.nah-button {
    animation: moveButton 5s infinite; /* Looping animation */
}
