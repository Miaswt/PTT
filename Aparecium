<body>

<div class="container">
    <h1>Will you go on a date with me?</h1>
    <button onclick="showPopup()">Aparecium</button>
</div>

<!-- Popup for Yes/No options -->
<div id="optionsPopup" class="popup">
    <div class="popup-content">
        <h2>What's your choice?</h2>
        <button onclick="showCongratsPopup()">Yes</button>
        <button class="nah-button" onclick="moveNahButton()">Nah</button>
    </div>
</div>

<!-- Popup for Congratulations -->
<div id="congratsPopup" class="popup">
    <div class="popup-content">
        <h2>Congratulations!</h2>
        <p>Your choice is very good. See you soon!</p>
    </div>
</div>

<!-- Image and Music -->
